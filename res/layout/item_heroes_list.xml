<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_herose_list"
    android:layout_width="match_parent"
    android:layout_height="57dp">

	<ImageView 
		android:id="@+id/imageview_heroes_list_img"
		android:layout_width="45dp"
		android:layout_height="45dp"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="6dp"
		android:layout_marginBottom="6dp"/>

	<TextView
		android:id="@+id/textview_heroes_list_name"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="7dp"
		android:layout_marginTop="4dp"
		android:textSize="16sp"
		android:textColor="#176444"
		android:layout_toRightOf="@+id/imageview_heroes_list_img"/>

	<TextView
		android:id="@+id/textview_heroes_list_title"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="7dp"
		android:layout_marginTop="32dp"
		android:textSize="14sp"
		android:textColor="#939393"
		android:layout_toRightOf="@+id/imageview_heroes_list_img"/>
         
</RelativeLayout>
